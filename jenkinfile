pipeline {
    agent any

    tools {
       maven 'maven-3.8.5'
    }
	
	stages {
	     stage('Git clone') {
	      steps {git branch: 'main', credentialsId: 'github2', url: 'https://github.com/harishvani/simple-java-project.git'
	      }
		  }
	
	      stage('maven clean') {
	      steps {'mvn clean'
	      }
		  }
	      stage('maven validate') {
	      steps { 'mvn validate'
	      }
		  }
	      stage('maven compile') {
	      steps {'mvn compile'
	      }
		  }
	      stage('maven Test') {
	      steps { 'mvn test'
	      }
		  }
	      stage('maven Package') {
	      steps {'mvn Package'
	      }
		  }
	      stage('maven deploy') {
	      steps {'mvn deploy'
	      }
		  }
	      
		
		
           
        }
    }

